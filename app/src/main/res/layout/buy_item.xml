<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/itemLay"
    android:clickable="true"
    android:focusable="true"
    android:layout_margin="10dp"
    android:focusableInTouchMode="false"
    android:elevation="1dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="250dp">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/background_rectangle_greyish"
        android:layout_margin="2dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/linear"
            android:layout_toLeftOf="@id/modal_price_layout"
            android:layout_alignParentLeft="true"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crop"
                android:id="@+id/crop_name_tv"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/area_tv"
                android:textSize="15sp"
                android:layout_below="@id/area_tv"
                android:text="Area"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:id="@+id/modal_price_layout">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹6552"
                android:layout_marginLeft="20dp"
                android:id="@+id/rate_tv"
                android:textSize="20sp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@id/rate_tv"
                android:layout_toRightOf="@id/rate_tv"
                android:id="@+id/modal_price_support"
                android:text=" / Quintal"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:gravity="bottom"
            android:layout_toRightOf="@id/quantity_tv"
            android:layout_marginLeft="40dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true">
            <!--<ImageView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:tint="#555555"
                android:src="@drawable/location_icon" />-->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/price_tv"
                android:text="total price"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:textSize="18sp"/>
        </LinearLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:id="@+id/quantity_tv"
            android:text="120"
            android:layout_below="@id/linear"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true" />



    </RelativeLayout>

</RelativeLayout>